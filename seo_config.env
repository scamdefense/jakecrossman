# SEO Configuration File for Jake Crossman Acting Portfolio
# Add these environment variables to your deployment or .env file

# Google Analytics 4
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Google Tag Manager (alternative to GA4)
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Google Search Console
GOOGLE_SEARCH_CONSOLE_VERIFICATION=your_verification_code_here

# Bing Webmaster Tools
BING_VERIFICATION=your_bing_verification_code

# Microsoft Clarity for heatmaps and session recordings
CLARITY_PROJECT_ID=your_clarity_project_id

# Facebook Pixel for social media tracking
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# Schema.org Configuration
SCHEMA_ORG_COMPANY_ID=your_company_id
SCHEMA_ORG_PERSON_ID=your_person_id

# Performance Settings
ENABLE_CACHE_HEADERS=True
ENABLE_COMPRESSION=True
ENABLE_LAZY_LOADING=True

# Security Settings
ENABLE_SECURITY_HEADERS=True
ENABLE_CSP=True

# CDN Configuration (if using)
CDN_DOMAIN=cdn.jakecrossman.com
STATIC_URL_PREFIX=https://cdn.jakecrossman.com/static

# Social Media Verification
FACEBOOK_APP_ID=your_facebook_app_id
TWITTER_SITE=@jakecrossman
INSTAGRAM_HANDLE=jakecrossman

# Local SEO Settings
BUSINESS_NAME=Jake Crossman Professional Acting Services
BUSINESS_PHONE=814-403-0835
BUSINESS_EMAIL=crossmantv@outlook.com

# Advanced SEO Features
ENABLE_AMP=False
ENABLE_PWA=True
ENABLE_WEB_STORIES=False

# GDPR/Privacy Compliance
ENABLE_COOKIE_CONSENT=True
PRIVACY_POLICY_URL=https://jakecrossman.com/privacy
TERMS_OF_SERVICE_URL=https://jakecrossman.com/terms

# Monitoring and Analytics
ENABLE_REAL_USER_MONITORING=True
ENABLE_SYNTHETIC_MONITORING=True
