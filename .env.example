# Example environment variables for Actor Portfolio
# Copy to .env and fill in values

# Flask secret key
SECRET_KEY=fallback-secret-key

# Email settings
SMTP_SERVER=
SMTP_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# Analytics
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=
CLARITY_PROJECT_ID=
FACEBOOK_PIXEL_ID=

# Search engine verification
GOOGLE_SEARCH_CONSOLE_VERIFICATION=
BING_VERIFICATION=
YANDEX_VERIFICATION=
PINTEREST_VERIFICATION=

# Schema.org
SCHEMA_ORG_COMPANY_ID=
SCHEMA_ORG_PERSON_ID=

# Performance and security
ENABLE_CACHE_HEADERS=True
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=300
STATIC_CACHE_TIMEOUT=3600
ENABLE_COMPRESSION=True
ENABLE_LAZY_LOADING=True
ENABLE_SECURITY_HEADERS=True
ENABLE_CSP=True

# CDN
CDN_DOMAIN=
STATIC_URL_PREFIX=

# Social media
FACEBOOK_APP_ID=
TWITTER_SITE=
INSTAGRAM_HANDLE=

# Business details
BUSINESS_NAME=
BUSINESS_PHONE=
BUSINESS_EMAIL=

# Advanced SEO
ENABLE_AMP=False
ENABLE_PWA=True
ENABLE_WEB_STORIES=False

# Privacy
ENABLE_COOKIE_CONSENT=True
PRIVACY_POLICY_URL=
TERMS_OF_SERVICE_URL=

# Monitoring
ENABLE_REAL_USER_MONITORING=True
ENABLE_SYNTHETIC_MONITORING=True
